<%= link_to raw('<i class="fa fa-plus"></i> New Task'), 
    new_task_path, 
    class: 'btn btn-sm btn-success main-action-button' %>

<h1>All Tasks
<% if @tag_name %>
with Tag
<%= @tag_name %>
<% end %>
</h1>
<div class="row">
  <div class="col-md-9">  
    <table class="table table-striped tasks-table">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Due</th>
        <th colspan="2">Tags</th>
      </tr>
     
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.text %></td>
          <td><%= task.due_date %></td>
          <td>
            <% task.tags.each do |tag| %>
              <%= link_to tag.name, filter_tasks_path(tag.name), class: 'tasks-tag label label-default', style: "background-color: " + tag.color %>
            <% end %>
          </td>
          <td class="tasks-action-column">
            <%= link_to raw('<i class="fa fa-search"></i>'),
              task_path(task), 
              class: 'btn btn-default btn-xs' %>
            <%= link_to raw('<i class="fa fa-pencil"></i>'), 
              edit_task_path(task), 
              class: 'btn btn-default btn-xs' %>
            <%= link_to raw('<i class="fa fa-trash"></i>'), 
              task_path(task),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class: 'btn btn-default btn-xs' %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-md-3 tags-container">
    <div class="panel panel-default">
      <div class="panel-heading">Tags <%= link_to raw('<i class="fa fa-pencil"></i>'), tags_path, class: 'tags-edit' %></div>
      <div class="panel-body">
        <% Tag.all.each do |tag| %>
          <%= link_to tag.name, filter_tasks_path(tag.name), class: 'tasks-tag label label-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>