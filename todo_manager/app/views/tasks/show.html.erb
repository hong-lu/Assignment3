<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<%= link_to raw('<i class="fa fa-arrow-left"></i> Back'),
      tasks_path, 
      class: 'btn btn-default btn-sm main-action-button' %>

<h1><%= @task.title %></h1>
<hr>
<strong> Due at:
  <%= @task.due_date.to_s(:long)%>
</strong>
<p>
  <%= @task.text %>
</p>
<% @task.tag_array.each do |tg| %>
  <span class="label label-info"><%= tg %></span>
<% end %>
<br><br>
<%= link_to raw('<i class="fa fa-pencil"></i> Edit Task'),
      edit_task_path(@task), 
      class: 'btn btn-success btn-sm' %>
