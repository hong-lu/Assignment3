<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<%= link_to raw('<i class="fa fa-arrow-left"></i> Back'),
      tasks_path, 
      class: 'btn btn-default btn-sm main-action-button' %>

<h1><%= @task.title %></h1>
<% @task.tag_array.each do |t| %>
  <span class="label label-primary"> <span class="tag"><%= link_to t, tag_path(t) %></span></span>
<% end %>
<hr>
<strong> Due at:
  <%= @task.due_date.to_s(:long)%>
</strong>
<p>
  <%= @task.text %>
</p>
<%= link_to raw('<i class="fa fa-pencil"></i> Edit Task'),
      edit_task_path(@task), 
      class: 'btn btn-success btn-sm' %>
