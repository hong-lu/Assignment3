<%= link_to raw('<i class="fa fa-arrow-left"></i> Back'),
      tasks_path, 
      class: 'btn btn-default btn-sm main-action-button' %>

<h1><%= @task.title %></h1>
<hr>
<strong> Due at:
  <%= @task.due_date.to_time.strftime('%B %e %l:%M %p') %>
</strong>
<p>
  <%= @task.text %>
</p>

<%= link_to raw('<i class="fa fa-pencil"></i> Edit Task'),
      edit_task_path(@task), 
      class: 'btn btn-success btn-sm' %>
