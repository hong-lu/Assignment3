<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<%= link_to raw('<i class="fa fa-arrow-left"></i> Back'),
      tasks_path, 
      class: 'btn btn-default btn-sm main-action-button' %>

<h1><%= @task.title %></h1>
<% @task.tags.each do |tag| %>
  <%= link_to tag.name, filter_tasks_path(tag.name), class: 'tasks-tag label label-default', style: "background-color: " + tag.color %> 
<% end %>
<hr>
<strong> Due at:
  <%= @task.due_date.to_s(:long)%>
</strong>
<p>
  <%= @task.text %>
</p>
<%= link_to raw('<i class="fa fa-pencil"></i> Edit Task'),
      edit_task_path(@task), 
      class: 'btn btn-success btn-sm' %>
