<%= form_for @task do |f| %>

  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %> prohibited
        this task from being saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
  </div>
  <div class="form-group">
    <%= f.label :text %>
    <%= f.text_area :text, class: 'form-control', placeholder: 'Enter text' %>
  </div>
  <div class="form-group">
    <%= f.label :due_date %>
    <%= f.datetime_local_field :due_date, class: "datepicker" %>    
  </div>
  <p>
    <%= f.submit nil, class: 'btn btn-success' %>
  </p>
<% end %>