<%= form_for @task, remote: true do |f| %>

  <% if @task.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4>
        <%= pluralize(@task.errors.count, "error") %> prohibited
        this task from being saved:
      </h4>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <form>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
  </div>
  <div class="form-group">
    <%= f.label :text %>
    <%= f.text_area :text, class: 'form-control', placeholder: 'Enter text' %>
  </div>
  <div class="form-group">
    <%= f.label :due_date %>
    <%= f.datetime_local_field :due_date, class: 'form-control datepicker' %>
  </div>
  <div class="form-group">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br />
    <%= f.text_area :tag_list, class: 'form-control', placeholder: 'Enter your tags, e.g: Health, Sport...'%>
  </div>
  <br>
  <p>
    <%= f.submit nil, class: 'btn btn-success'%>
    <a class="btn btn-danger js-close">Cancel</a>
  </p>
<% end %>